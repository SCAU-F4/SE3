<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Mapper.PictureMapper">

  <resultMap type="picture" id="pictureMap">
  	<id column="goodsID" property="goodsID"/>
  	<result column="pictureID" property="pictureID"/>
  	<result column="picturePath" property="picturePath"/>
  </resultMap>

  <select id="find" resultMap="pictureMap">
    select * from Picture where goodsID = #{0} AND pictureID= #{1}
  </select>
  <insert id="insert" parameterType="picture">
  	insert into Picture values(#{goodsID}, #{pictureID}, #{picturePath})
  </insert>
  <update id="update" parameterType="picture">
    update Picture set picturePath=#{picturePath}  where goodsID=#{goodsID} AND pictureID= #{pictureID}
  </update>
  <delete id="delete" parameterType="picture">
    delete from Picture where goodsID=#{goodsID} AND pictureID= #{pictureID}
  </delete>
</mapper>