<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Mapper.IndentMapper">

  <resultMap type="indent" id="indentMap">
  	<id column="orderID" property="orderID"/>
  	<result column="customerID" property="customerID"/>
  	<result column="totalPrice" property="totalPrice"/>
  	<result column="orderTime" property="orderTime"/>
  	<result column="addressID" property="addressID"/>
  	<result column="expressCode" property="expressCode"/>
  </resultMap>

  <select id="findById" resultMap="indentMap">
    select * from Indent where orderID = #{0}
  </select>
  <insert id="insert" parameterType="indent">
  	insert into Indent values(#{orderID}, #{customerID}, #{totalPrice}, #{orderTime}, #{addressID}, #{expressCode})
  </insert>
  <update id="update" parameterType="indent">
    update Indent set customerID=#{customerID}, totalPrice=#{totalPrice},orderTime=#{orderTime},addressID=#{addressID},expressCode=#{expressCode} where orderID=#{orderID} 
  </update>
  <delete id="delete" parameterType="indent">
    delete from Indent where orderID=#{orderID}
  </delete>
</mapper>